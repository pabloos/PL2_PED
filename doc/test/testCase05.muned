(* Tipos de datos. Record*)
(* se tienen que imprimir las siguientes l√≠neas:*)
(* edad:*)
(* 23*)
(* dni:*)
(* 123*)
(* edad mas 1:*)
(* 24*)

MODULE cinco;

 TYPE TipoPersona = RECORD 
                    edad   : INTEGER; 
                    dni    : INTEGER; 
                    casado : BOOLEAN; 
                   END; 
VAR juan : TipoPersona;
    a: INTEGER;
BEGIN
juan.edad := 23;
juan.dni := 123;
juan.casado := FALSE;
	a := juan.edad;
WRITESTRING("edad:");
WRITEINT(juan.edad);
WRITESTRING(" dni:");
WRITEINT(juan.dni);
WRITESTRING(" edad mas 1:");
WRITEINT(juan.edad+1);
  END cinco;
